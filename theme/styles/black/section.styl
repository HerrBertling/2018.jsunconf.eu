.section
  font-size: 1rem
  margin: emCalc(50) 0

  &__header, &__content, &__call-to-action
    max-width: emCalc(940)
    margin: 0 auto

  &__header
    background-repeat: no-repeat
    background-size: cover
    background-position: center center

    h2
      line-height: 1.05

    &--awesome, &--tickets, &--sponsoring, &--coc
      padding: 0 2em

  &__content
    padding: emCalc(40) emCalc(20)

  &__call-to-action
    text-align: center
    padding: emCalc(40) emCalc(20) emCalc(40) emCalc(20)
